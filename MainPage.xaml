<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AzureDeploymentsApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <!-- App Title -->
            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Azure Deployments Manager"
                FontSize="32"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="{DynamicResource Primary}" />

            <Label
                Text="Intune Test Application"
                FontSize="18"
                HorizontalOptions="Center"
                TextColor="{DynamicResource Secondary}" />

            <!-- Main Action Button -->
            <Button
                x:Name="RefreshBtn"
                Text="Click here to refresh Azure deployments page"
                SemanticProperties.Hint="Refreshes the Azure deployments page"
                Clicked="OnRefreshClicked"
                FontSize="18"
                Padding="20,15"
                CornerRadius="8"
                HorizontalOptions="Fill"
                Margin="0,20,0,0" />

            <!-- Status Label -->
            <Label
                x:Name="StatusLabel"
                Text="Ready to refresh deployments"
                FontSize="16"
                HorizontalOptions="Center"
                Margin="0,10,0,0"
                TextColor="{DynamicResource Tertiary}" />

            <!-- Counter Button (for testing) -->
            <Button
                x:Name="CounterBtn"
                Text="Click me for counter test"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                FontSize="14"
                Padding="15,10"
                HorizontalOptions="Fill"
                Margin="0,30,0,0" />

            <Label
                x:Name="CounterLabel"
                Text="Click the button above"
                FontSize="14"
                HorizontalOptions="Center"
                Margin="0,10,0,0" />

            <!-- Additional Info -->
            <Label
                Text="This app demonstrates Intune MAM capabilities"
                FontSize="12"
                HorizontalOptions="Center"
                Margin="0,40,0,0"
                TextColor="{DynamicResource Gray600}" />

            <Label
                Text="Features to test:"
                FontSize="12"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,20,0,5"
                TextColor="{DynamicResource Gray600}" />

            <Label
                Text="• Data Protection
• Copy/Paste Restrictions
• PIN Enforcement
• Conditional Launch"
                FontSize="11"
                HorizontalOptions="Center"
                TextColor="{DynamicResource Gray600}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
